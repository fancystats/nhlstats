#!/usr/bin/env python

import logging
import optparse

from nhlstats import main


if __name__ == '__main__':
    parser = optparse.OptionParser()
    parser.add_option('-u', '--updates', dest='updats', action='store_true', default=False,
                      help='check for updates to stats on finished games.')
    parser.add_option('-v', '--verbose', dest='verbose', action='store_true', default=False,
                      help='enable verbose logging')

    (options, args) = parser.parse_args()

    logLevel = logging.INFO
    if options.verbose:
        logLevel = logging.DEBUG

    logging.basicConfig(name=__name__, level=logLevel, format='%(asctime)s - %(levelname)s - %(name)s - %(message)s', datefmt='%Y-%m-%d %H:%M:%S')

    main(options.updates)
